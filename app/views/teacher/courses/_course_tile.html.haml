.thumbnail
  = image_tag course.logo.url(:medium) 
  .caption
    %h3=course.name
    %p
      = link_to 'Show', course, class: 'btn btn-primary'
      = link_to 'Edit', edit_teacher_course_path(course), class: 'btn btn-default'
      = link_to 'Delete', course, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-danger'
