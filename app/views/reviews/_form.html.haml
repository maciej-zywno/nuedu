= form_for @review do |f|
  - if @review.errors.any?
    #error_explanation
      %h2= "#{pluralize(@review.errors.count, "error")} prohibited this review from being saved:"
      %ul
        - @review.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :content
    = f.text_area :content
  .field
    = f.label :user
    = f.text_field :user
  .field
    = f.label :course
    = f.text_field :course
  .field
    = f.label :stars
    = f.number_field :stars
  .field
    = f.label :status
    = f.text_field :status
  .actions
    = f.submit 'Save'
