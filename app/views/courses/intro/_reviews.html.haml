-if course.reviews.empty?
  .row
    .col-md-3
      %h2 No reviews yet
-else
  .row
    .col-md-3
      %h2=pluralize course.reviews.count, 'Review'
  .review-container
    - course.reviews.in_groups_of(2, false) do |group| 
      .row.space
        - group.each do |review|
          .col-sm-6.col-md-6
            .media.white
              = image_tag review.user.avatar.url(:thumb), class: 'media-object, pull-left'
              .media-body
                %h4.media-heading= review.user.username 
                %p.small=review.content