%header
  .header-shadow
  .top-line
  .container
    .top-header
      .row
        .col-lg-2.col-lg-offset-1.col-md-2.col-xs-offset-0
          = link_to root_path, id: 'logo' do
            = image_tag 'logo.svg'
        .col-lg-8.col-md-10
          %i.icon-menu.fa.fa-list.fa-2x
        .col-lg-8.col-md-10

          %nav#main-menu{class: "#{user_signed_in? ? 'is-login-menu' : ''}"}
            %ul.nav.nav-pills
              %li
                = link_to 'Kursy', courses_path
              - Cms::Page.roots.published.each do |page|
                =render '/menu/dynamic', page: page

            - if user_signed_in?
              .is-login-wrapper
                %ul.nav.nav-pills
                  = render partial: '/nowe_widoki/shared/signed_in_menu'
            - else
              %ul.nav.nav-pills
                = render partial: '/nowe_widoki/shared/anonymous_menu'

    .slogan-wrapper
      .row
        .col-lg-10.col-lg-offset-1.col-xs-offset-0
          %p.header-slogan Lorem ipsum dolor sit amet, consectetur adipiscing elit.
    .header-course
      .row
        .col-lg-10.col-lg-offset-1.col-xs-offset-0
          = image_tag 'sponsorowane.png', class: 'img-responsive'
          %a.show-hc{href: "#"} Zobacz kurs