.row
  .col-md-2
  .col-md-8
    %h2
      = "#{@step.name}"
    %p
      = @step.description.html_safe

    %br
    - if @step.videos.first
      =link_to 'Play', play_video_path(@step.videos.first), class: 'btn btn-default', remote: true
  .col-md-2
    =render 'steps/progress_box', step: @step
    =render 'steps/attachments', step: @step

.f-player-container
.f-exam-container

